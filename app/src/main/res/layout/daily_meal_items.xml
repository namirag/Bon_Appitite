<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_skin"
    android:layout_marginBottom="4dp">


    <ImageView
        android:id="@+id/image_food_daily"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:foreground="@drawable/daily_meal_bg"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/lunch"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/text_type_daily"
        android:layout_width="247dp"
        android:layout_height="37dp"
        android:fontFamily="@font/aleo"
        android:text="Lunch"
        android:textColor="@color/light_skin"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_food_daily"
        app:layout_constraintVertical_bias="0.039"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/text_food_daily"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:text="Burger"
        android:textColor="@color/light_skin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_food_daily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/text_dec_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Menu Direction Process"
        android:textColor="@color/light_skin"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_food_daily"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <TextView
        android:id="@+id/text_rate_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="5.0"
        android:textColor="@color/light_skin"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_food_daily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dec_daily"
        app:layout_constraintVertical_bias="0.733"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="64dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:rating="5.0"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toBottomOf="@+id/image_food_daily"
        app:layout_constraintStart_toEndOf="@+id/text_rate_daily"
        app:layout_constraintTop_toBottomOf="@+id/text_dec_daily"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>